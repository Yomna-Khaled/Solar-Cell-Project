<p id="notice"><%= notice %></p>
  <h1 align="center">
    <span class="page-header">Listing Containers</span>
  </h1>
<div class="container" style="width: calc(70%);">
  <div class="well">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr class="success">
            <th class="text-center">Serialno</th>
            <th class="text-center">Capacity</th>
            <th class="text-center">Price</th>
            <th class="text-center">Total power</th>
            <th class="text-center">Show</th>
            <th class="text-center">Edit</th>
          </tr>
        </thead>
        <tbody>
          <% @containers.each do |container| %>
            <tr>
              <td class="text-center"><%= container.serialNo %></td>
              <td class="text-center"><%= container.capacity %></td>
              <td class="text-center"><%= container.price %></td>
              <td class="text-center"><%= container.total_power %></td>
              <td class="text-center"><%= link_to 'Show', container, class:"btn btn-primary" %></td>
              <td class="text-center"><%= link_to 'Edit', edit_container_path(container), class:"btn btn-default" %></td>
            </tr>
            <table class="table table-striped">
          		<thead>
          			<tr>
            			<th class="text-center">production_date</th>
            			<th class="text-center">height</th>
            			<th class="text-center">width</th>
            			<th class="text-center">power</th>
            			<th class="text-center">celltype</th>
            			<th class="text-center">subtype</th>
                  <th class="text-center">price</th>
                  <th class="text-center">serialNo</th>
                  <th class="text-center">cells no.</th>  
               		<th class="text-center">price</th>  
               		<th class="text-center">power</th>  
                </tr>  		                     
          		</thead>
              <tbody>
            	  <tr>
                <% container.solar_panels.each do |solar_panel| %>
            		<p>
          		    <td class="text-center"><%= solar_panel.production_date %></td>
                  <td class="text-center"><%= solar_panel.height %></td>
                  <td class="text-center"><%= solar_panel.width %></td>
                  <td class="text-center"><%= solar_panel.power %></td>
                  <td class="text-center"><%= solar_panel.celltype %></td>
                  <td class="text-center"><%= solar_panel.subtype%></td>
                  <td class="text-center"><%= solar_panel.price %></td>
                  <td class="text-center"><%= solar_panel.serialNo%></td>                
                  <td class="text-center"><%= solar_panel.cellno %></td> 
          		    <td class="text-center"><%= solar_panel.price %></td>
          		    <td class="text-center"><%= solar_panel.power %></td>
            	  </p> 
            		<% end %> 
                </tr>      
                <% end %>
              </tbody>  
            </tr>
          </table>    
        </tbody>
      </table>
    </div>
  </div>
</div>      
<%= will_paginate @containers %>
<br>


