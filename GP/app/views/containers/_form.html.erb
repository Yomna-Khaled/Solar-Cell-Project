<div class="container text-center">
<%= form_for(@container) do |f| %>
  <% if @container.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@container.errors.count, "error") %> prohibited this container from being saved:</h2>

      <ul>
      <% @container.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="panel panel-success" style="margin-top: 50px">
<div class="panel-body">


  <div class="field form-group">
    <%= f.label :width %><br>
    <%= f.number_field :width ,step:0.1 ,class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :height %><br>
    <%= f.number_field :height ,step:0.1 ,class: 'form-control'%>
  </div>
  <div class="field form-group">
    <%= f.label :serialNo %><br>
    <%= f.text_field :serialNo ,class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :capacity %><br>
    <%= f.number_field :capacity ,class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price ,step:0.1 ,class: 'form-control' %>
  </div>

  <%= f.label :Vendor_Name %><br>
<%= select_tag "vendor_id" , options_from_collection_for_select(@vendors, "id", "name") , include_blank: true  %>
  <div class="actions">
    <%= f.submit %>

  </div>
<% end %>
</div>

