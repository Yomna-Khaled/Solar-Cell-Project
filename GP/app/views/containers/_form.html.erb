<style>
#error_explanation {
  color: red;
  background-color: white;
  border: white;
}

.field_with_errors {
    background-color: white;
}

</style>


<div class="container text-center">
<%= form_for(@container) do |f| %>
  <% if @container.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@container.errors.count, "error") %> prohibited this container from being saved:</h2>

      <ul>
      <% @container.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>





  <div class="field form-group">
    <%= f.label :width %><br>
    <%= f.number_field :width ,step:0.1 ,class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :height %><br>
    <%= f.number_field :height ,step:0.1 ,class: 'form-control'%>
  </div>
  <div class="field form-group">
    <%= f.label :serialNo %><br>
    <%= f.text_field :serialNo ,class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :capacity %><br>
    <%= f.number_field :capacity ,class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :price %><br>
    <%= f.number_field :price ,step:0.1 ,class: 'form-control' %>
  </div>
   <div class="field form-group">
    <%= f.label :total_power %><br>
    <%= f.number_field :total_power ,step:0.1 ,class: 'form-control' %>
  </div>
  
 
<div class="form-group">
  <%= f.label :Vendor %><br>
  <select id="vendor" name="vendor" class="form-control">
    <% @vendors.each do |vendor| %>
       <% if @flag == "new" %>
      <option value="<%= vendor.id %>"><%= vendor.name %></option>
       <%else %>
        <% if @vendor_id == vendor.id &&%>
          <option value="<%= vendor.id %>" selected><%= vendor.name %></option>
          <%else%>
          <option value="<%= vendor.id %>"><%= vendor.name %></option>
        <%end%>   
      <%end %>
    <% end -%>
  </select>
</div>










    <%= f.submit %>

  </div>
<% end %>
</div>

