
<div class="container" style="width: calc(90%);">
    <h1 class="page-header" style="font-size:30px; color:#2A4E6E" ><span class="fa fa-info-circle"></span> Order Details</h1>

 <section class="register" >  
    <div class="reg_section">
        <h3 style="display:inline-block;" class="text-capitalize"> Buyer : </h3> <% buyer=Buyer.find_by(id: @sold_panel.buyer_id )%> <strong class="text-capitalize"><%= buyer.name %></strong>
  </div>

 <div class="reg_section">
  <h3 style="display:inline-block;">Total Price:</h3><%= @sold_panel.totalPrice %>
</div>
 <div class="reg_section">
  <h3 style="display:inline-block;">Totalpower:</h3> <%= @sold_panel.totalPower %>
</div>

    <div class="reg_section">
<table class="table table-hover table-responsive">
    <thead>
    <tr>

       <th text-align="center"><h3>Serial Number</h3></th>
      <th text-align="center"><h3>Production date</h3></th>
      <th text-align="center"><h3>Height</h3></th>
      <th text-align="center" ><h3>Width</h3></th>
      <th text-align="center"><h3>Power</h3></th>
      <th text-align="center"><h3>Type</h3></th>
      <th text-align="center"><h3>Subtype</h3></th>
      <th text-align="center"><h3>Price</h3></th>
      <th text-align="center"><h3>Container</h3></th>
     
   

    </tr>
  </thead>
  <tbody>

  	<% @solar_panels.each do |solar_panel| %>
      <tr>
      <td><%= solar_panel.serialNo %></td>
        <td><%= solar_panel.production_date %></td>
        <td><%= solar_panel.height %></td>
        <td><%= solar_panel.width %></td>
        <td><%= solar_panel.power %></td>
        <td><%= solar_panel.celltype %></td>
        <td><%= solar_panel.subtype %></td>
        <td><%= solar_panel.price %></td>
        
        <td><%= solar_panel.container.serialNo %></td>
  
      
      </tr>

    <% end %>

  </tbody>
</table>
</div>
</section>
</div>
