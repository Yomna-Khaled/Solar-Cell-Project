
<div class="container" style="width: calc(70%);">
  <h1 class="page-header" style="font-size:30px; color:#2A4E6E"><span class="fa fa-list"></span> All sold Panels</h1>
  <section class="register" >  
    <div class="reg_section">

      <table class="table table-hover table-responsive">
        <thead>
          <tr>
            <th class="text-center"><h1>Buyer</h1></th>
            <th class="text-center"><h1>Totalprice</h1></th>
            <th class="text-center"><h1>Totalpower</h1></th>
            <th class="text-center"><h1>Show</h1></th>
            <th class="text-center"><h1>Edit</h1></th>
          </tr>
        </thead>
        <tbody>
          <% @sold_panels.each do |sold_panel| %>
            <tr>
              <% buyer = Buyer.find_by(id:sold_panel.buyer_id  )%>
              <td class="text-center"><%= buyer.name %></td>
              <td class="text-center"><%= sold_panel.totalPrice %></td>
              <td class="text-center"><%= sold_panel.totalPower %></td>
              <td class="text-center"> <%= link_to 'Show', sold_panel, class:"btn btn-info" %></td>
              <td class="text-center"><%= link_to 'Edit', edit_sold_panel_path(sold_panel), class:"btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </section>

</div>      
