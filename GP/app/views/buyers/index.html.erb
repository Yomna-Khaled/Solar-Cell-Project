<div class="container" style="width: calc(80%);">
  <h1 class="page-header" style="font-size:30px; color:#2A4E6E" ><span class="fa fa-list"></span>All Buyers</h1>
  <section class="register" >  
    <div class="reg_section">
      <table class="table table-hover table-responsive"> 
        <thead>
          <tr>
            <th class="text-center">Crew Name</th>
            <th class="text-center">No of workers</th>
            <th class="text-center">Show</th>
            <% if current_category.category!="Admin" %>
            <th class="text-center">Edit</th>
            <%end%>
          </tr>
        </thead>
        <tbody>
          <% @buyers.each do |buyer| %>

        <tr>
          <td><%= buyer.name %></td>
          <td><%= buyer.addess %></td>
          <td><%= buyer.city %></td>
          <td><%= link_to 'Show', buyer %></td>
          <% if current_category.category!="Admin" %>
          <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
          <%end%>
        </tr>  
          <% end %>
        </tbody>
      </table>
    </div>
  </section>
</div>    
<%= will_paginate @buyers, renderer: BootstrapPagination::Rails %>

