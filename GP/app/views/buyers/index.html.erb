

<h1>Listing Buyers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Addess</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.name %></td>
        <td><%= buyer.addess %></td>
        <td><%= buyer.city %></td>
        <td><%= link_to 'Show', buyer %></td>
        <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
        <td><%= link_to 'Destroy', buyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @buyers, renderer: BootstrapPagination::Rails %>
<br>

<%= link_to 'New Buyer', new_buyer_path %>
