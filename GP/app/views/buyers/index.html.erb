
<div class="container" style="width: calc(70%);">
    <h1 class="page-header" style="font-size:35px;">All Buyers</h1>
    <table class="table table-hover table-responsive"> 
      <thead>
        <tr>
          <th class="text-center">Crew Name</th>
          <th class="text-center">No of workers</th>
          <th class="text-center">Show</th>
          <th class="text-center">Edit</th>
        </tr>
      </thead>
      <tbody>
        <% @buyers.each do |buyer| %>

      <tr>
        <td><%= buyer.name %></td>
        <td><%= buyer.addess %></td>
        <td><%= buyer.city %></td>
        <td><%= link_to 'Show', buyer %></td>
        <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
      </tr>  
        <% end %>
      </tbody>
    </table>
</div>    
<%= will_paginate @buyers, renderer: BootstrapPagination::Rails %>







