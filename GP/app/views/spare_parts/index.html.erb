<p id="notice"><%= notice %></p>

<h1 class="page-header">Listing Spare Parts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Machine</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spare_parts.each do |spare_part| %>
      <tr>
        <td><%= spare_part.name %></td>
        <td><%= spare_part.quantity %></td>
        <td><%= spare_part.price %></td>
        <td><%= spare_part.machine.name %></td>
        <td><%= link_to 'Show', spare_part ,class:"btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_spare_part_path(spare_part),class:"btn btn-info" %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

