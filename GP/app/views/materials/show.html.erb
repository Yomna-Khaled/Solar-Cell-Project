<div class="container" style="width: calc(60%);">
 
      <h1 class="page-header text-capitalize" style="font-size:30px;"><span class="fa fa-eye"> <%=  @material.name %> Details</h1>
  

  <div class="row">
    <div class="col-md-3">
      <br><br>
      <img src="<%= @material.avatar %>" class="img-thumbnail" style="width:200px ; height:200px;">
    </div> 

    <div class="col-md-9">
      <div class="page-header">
           <h1><span class="fa fa-info-circle"></span> Basic Infro.</h1>
      </div>

      <ul class="list-group">
        <li class="list-group-item">Serial_Number: <%= @material.serial_number %></li>
        <li class="list-group-item">Price: <%= @material.price %></li>
      </ul>


      <div class="page-header">
          <h1><span class="fa fa-floppy-o"></span> Stock Info.</h1>
      </div>

      <ul class="list-group">
        <li class="list-group-item">Quantity :  <%= @material.quantity_value %> <%= @material.quantity.unit_name %></li>
        <li class="list-group-item">StockNo: <%= @material.stockNo  %></li>
        <li class="list-group-item">Shelf No: <%= @material.shelfNo  %></li>
        <li class="list-group-item">Min Number: <%= @material.Min_Number %></li>
      </ul>

      <div class="page-header">
          <h1><span class="fa fa-calendar"></span> Material Date</h1>
      </div>

      <ul class="list-group">
        <li class="list-group-item">Production date: <%= @material.production_date %></li>
        <li class="list-group-item">Expiration date: <%= @material.expiration_date %></li>
      </ul>

      <div class="page-header">
          <h1><span class="fa fa-user"></span> Material Vendor</h1>
      </div>
      <ul class="list-group">
        <li class="list-group-item"> Vendor Name: <%= @material_vendor.where("material_id=?",@material.id).order(updated_at: :desc)[0].vendor.name %></li>
      </ul>     
       
      <div class="page-header">
          <h1><span class="fa fa-list-ul"></span> Material Properties</h1>
      </div>

      <ul class="list-group">
        <% index = 1%>
        <% @material_properties.each do |materialproperty| %>
            <li class="list-group-item">
              <%= materialproperty.property.name %> : 
              <%= materialproperty.value %>
            </li>
            <%index+=1%>
        <%end%>   
      </ul>
    </div>
  </div>
</div>  

