<style>
.thumbnail{
    width: 100px;
    height: 100px;
}
</style>



<div class="container" style="width: calc(70%);">
  <h1 class="page-header" style="font-size:35px;">All Materials</h1>
        <table class="table table-hover table-responsive">
          <thead>
            <tr>
              <th class="text-center">Material_Photo</th>
              <th class="text-center">Name</th>
              <th class="text-center">Serial Number</th>
              <th class="text-center">Quantity</th>
              <th class="text-center">Vendor</th> 
              <% if current_category.category!="Stock Keeper"%>
              <th class="text-center">Price</th>
              <%end%>              
              <th class="text-center">Show</th>
              <th class="text-center">Edit</th>
            </tr>
          </thead>
      <!-- @material_vendor.find(material.id).vendor_id -->
          <tbody>
            <% @materials.each do |material| %>
              <tr <% if material.quantity_value <= material.Min_Number %> class="danger" <%end%> >
                <td class="text-center"><%= image_tag material.avatar.url,:style=>"margin-left: auto; margin-right: auto", class: "thumbnail" %></td>
                <td class="text-center"><%= material.name %></td>
                <td class="text-center"><%= material.serial_number %></td>
                <td class="text-center"><%= material.quantity_value %>_<%= material.quantity.unit_name %></td>
                <td class="text-center"><%= @material_vendor.where("material_id=?",material.id).order(updated_at: :desc)[0].vendor.name %></td>
                <% if current_category.category!="Stock Keeper"%>
                <td class="text-center"><%= material.price %></td>
                <% end %>
                <td class="text-center"><%= link_to 'Show', material, class:"btn btn-primary" %></td>
                <td class="text-center"><%= link_to 'Edit', edit_material_path(material), class:"btn btn-default" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
<%= will_paginate @materials, renderer: BootstrapPagination::Rails %>
