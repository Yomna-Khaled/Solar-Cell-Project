
<div class="container" style="width: calc(70%);">
    <h1 class="page-header" style="font-size:30px; color:#2A4E6E" ><span class="fa fa-users"></span> All Crews</h1>
    <section class="register" >  
        <div class="reg_section">
            <table class="table table-hover table-responsive"> 
              <thead>
                <tr>
                  <th class="text-center"><h1>Crew Name</h1></th>
                  <th class="text-center"><h1>No of workers</h1></th>
                  <th class="text-center"><h1>Show</h1></th>
                  <th class="text-center"><h1>Edit</h1></th>
                </tr>
              </thead>
              <tbody>
                <% @crews.each do |crew| %>
                  <tr>
                    <td class="text-center"><%= crew.name %></td>
                    <td class="text-center"><%= crew.no_of_workers %></td>
                    <td class="text-center"><%= link_to 'Show', crew, class:"btn btn-info" %></td>
                    <td class="text-center"><%= link_to 'Edit', edit_crew_path(crew), class:"btn btn-danger"  %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
    </section>

<%= will_paginate @crews, renderer: BootstrapPagination::Rails %>
</div>    

