<p id="notice"><%= notice %></p>
  <h1 align="center">
    <span class="page-header">Listing Solar Panels</span>
  </h1>
<div class="col-md-offset-9" id="Search_by">
  <label>Select_Your_Search_Criteria</label><br>
  <%= select_tag(:searching, options_for_select([['Search_by_power', 1], ['Search_by_serialno', 2]]),onchange: "searchciteria()" ) %>
    <%= form_tag(solar_panels_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Panels" %>
      <%= hidden_field_tag :searchciteria, "power" %>
      <%= submit_tag "Search", :name => nil, :class => 'btn btn-link' %>
  <% end %>
</div>
<br>
<div class="container" style="width: calc(80%);">
  <div class="well">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr class="success" >
            <th class="text-center" >Production date</th>
            <th class="text-center" >Height</th>
            <th class="text-center" >Width</th>
            <th class="text-center" >Power</th>
            <th class="text-center" >Type</th>
            <th class="text-center" >Subtype</th>
            <th class="text-center" >Price</th>
            <th class="text-center" >Serialno</th>
            <th class="text-center" >Container_Serial_No.</th>
            <th class="text-center" >Container</th>
            <th class="text-center" >Show</th>
            <th class="text-center" >Edit</th>
          </tr>
        </thead>

        <tbody>
          <% @solar_panels.each do |solar_panel| %>
            <tr>
              <td class="text-center" ><%= solar_panel.production_date %></td>
              <td class="text-center" ><%= solar_panel.height %></td>
              <td class="text-center" ><%= solar_panel.width %></td>
              <td class="text-center" ><%= solar_panel.power %></td>
              <td class="text-center" ><%= solar_panel.celltype %></td>
              <td class="text-center" ><%= solar_panel.subtype %></td>
              <td class="text-center" ><%= solar_panel.price %></td>
              <td class="text-center" ><%= solar_panel.serialNo %></td>
              <td class="text-center" ><%= solar_panel.container.serialNo %></td>
              <td class="text-center" ><%= solar_panel.container_id %></td>
              <td class="text-center" ><%= link_to 'Show', solar_panel, class:"btn btn-primary"  %></td>
              <td class="text-center" ><%= link_to 'Edit', edit_solar_panel_path(solar_panel), class:"btn btn-default" %></td>
            </tr>

          <% end %>
        </tbody>
      </table>
    </div>
  </div> 
</div>  
<% if !@solar_panels.blank? %>
  <%= will_paginate @solar_panels %>
<%end%>
