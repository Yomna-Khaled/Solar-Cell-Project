<br>

<table class="table table-striped">
  <thead>
    <tr>


      <th text-align="center">Production date</th>
      <th text-align="center">Expire date</th>
      <th text-align="center">Height</th>
      <th text-align="center" >Width</th>
      <th text-align="center">Power</th>
      <th text-align="center">Type</th>
      <th text-align="center">Subtype</th>
      <th text-align="center">Price</th>
      <th text-align="center">Serialno</th>
      <th text-align="center">Container</th>
      <th text-align="center">Show</th>
      <th text-align="center">Edit</th>
      <th text-align="center">Delete</th>

    </tr>
  </thead>

  <tbody>
    <% @solar_panels.each do |solar_panel| %>
      <tr>
        <td><%= solar_panel.production_date %></td>
        <td><%= solar_panel.height %></td>
        <td><%= solar_panel.width %></td>
        <td><%= solar_panel.power %></td>
        <td><%= solar_panel.celltype %></td>
        <td><%= solar_panel.subtype %></td>
        <td><%= solar_panel.price %></td>
        <td><%= solar_panel.serialNo %></td>
        <td><%= solar_panel.container_id %></td>
        <td><%= link_to 'Show', solar_panel, class:"btn btn-primary"  %></td>
        <td><%= link_to 'Edit', edit_solar_panel_path(solar_panel), class:"btn btn-default" %></td>
        <td><%= link_to 'Destroy', solar_panel, method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if logged_in? %> 
  <% if current_category.category == "Shift Manager" %>
    <%= link_to 'New Solar panel', new_solar_panel_path %>
  <% end %>
<% end %>
