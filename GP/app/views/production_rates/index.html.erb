<div class="container" style="width: calc(70%);">
  <h1 class="page-header" style="font-size:30px; color:#2A4E6E" ><span class="fa fa-arrow-up"></span>  Production Rate</h1>
  <section class="register" >  
      <div class="reg_section">
        <table class="table table-hover table-responsive">
          <thead>
            <tr>
              <th  class="text-center">Number of panels per hour</th>
              <th class="text-center"><h3>Edit</h3></th>
            </tr>
          </thead>

          <tbody>
            <% @production_rates.each do |production_rate| %>
              <tr>
                <td class="text-center"><%= production_rate.number_of_panels_per_hour %></td>
                <td class="text-center"><%= link_to 'Edit', edit_production_rate_path(production_rate), class:"btn btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>
</div>    

