				  <li><%= link_to ' All Spare Parts', spare_parts_path , class: "glyphicon glyphicon-th-list"%></li>
				  <li><%= link_to ' Add Spare Part', new_spare_part_path , class: " glyphicon glyphicon-plus" %></li>
				  <li><%= link_to ' All Vendors', vendors_path , class: "glyphicon glyphicon-th-list"%></li>
				  <li><%= link_to ' Add Vendor', new_vendor_path , class: " glyphicon glyphicon-plus" %></li>
				  <li><%= link_to ' All Machines ', machines_path, class: "glyphicon glyphicon-th-list" %></li>
				  <li><%= link_to ' Add Machine', new_machine_path , class: " glyphicon glyphicon-plus" %></li>
				  <li><%= link_to ' All Palets', containers_path, class: "glyphicon glyphicon-th-list" %></li>
				  <li><%= link_to ' Add Palet', new_container_path ,class: " glyphicon glyphicon-plus" %></li>
				  <li><%= link_to ' Add Buyer', new_buyer_path , class: "glyphicon glyphicon-user"%></li>
				  <li><%= link_to ' All Soled Panels', sold_panels_path , class: "glyphicon glyphicon-th-list" %></li>
				  <li><%= link_to ' Order panel', new_sold_panel_path , class: "glyphicon glyphicon-check" %></li>
