				  <li><%= link_to ' Add Employee', new_employee_path , class: "glyphicon glyphicon-user" %></li>
				  <li><%= link_to ' All Employee', employees_path , class: "glyphicon glyphicon-list-alt" %></li>
				  <li><%= link_to ' Add Crew', new_crew_path , class: " glyphicon glyphicon-plus"%></li>
