		        <% if current_category.category == "Shift Manager" %>
	                <li><%= link_to ' Home', crew_home_path, class: "glyphicon glyphicon-home" %></li>
					<li><%= link_to ' Start Shift', shifts_showstartshift_path , class: "glyphicon glyphicon-time"%></li>
				 	<li><%= link_to ' End Shift', shifts_showendshift_path , class: "glyphicon glyphicon-dashboard" %></li>
	                <li><%= link_to  ' Add Produced Product',new_solar_panel_path ,method: :get ,class: " glyphicon glyphicon-plus" %></li>
	                <li><%= link_to 'Order Request', new_production_shift_path , class: "glyphicon glyphicon-check" %></li>
	                <li><%= link_to 'Current Shift', shifts_currentshift_path %></li>
	                <li><%= link_to 'My Shifts', shifts_path %></li>
				<% end %>
	            
				<% if current_category.category == "Stock Keeper" %>
					<li><%= link_to ' All Materials', materials_path , class: "glyphicon glyphicon-th-list" %></li>
					<li><%= link_to ' Un accepted requests', production_shifts_path , class: "glyphicon glyphicon-indent-left"%></li>
					<li><%= link_to ' All Spare Parts', spare_parts_path, class: "glyphicon glyphicon-th-list" %></li>
				<% end %>
			</ul>
	<% end %>

       
    </div>
        <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

<%= yield %>

    <!-- Custom JavaScript for the Side Menu and Smooth Scrolling -->
    <script>
    $("#menu-close").click(function(e) {
        e.preventDefault();
        $("#sidebar-wrapper").toggleClass("active");
    });
    </script>
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#sidebar-wrapper").toggleClass("active");
    });
    </script>
    <script>
    $(function() {
        $('a[href*=#]:not([href=#])').click(function() {
            if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') || location.hostname == this.hostname) {

                var target = $(this.hash);
                target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                if (target.length) {
                    $('html,body').animate({
                        scrollTop: target.offset().top
                    }, 1000);
                    return false;
                }
            }
        });
    });
    </script>
</body>


</html>
