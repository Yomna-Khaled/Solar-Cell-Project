<script type="text/javascript">
     var category = document.getElementById('employee_category_id');
      if (category) {
       target = document.getElementById('notnormal'); //div of input password
       if (category.text == 'Normal') target.style.display='none';
       category.onchange=function() {
        var type = category.options[document.getElementById('employee_category_id').selectedIndex].text;
        if (type == 'Normal') {
                         target.style.display = 'none';
                      } else {
                  target.style.display= '';
        }
       }
      }





var x=1;
var counter=0;
var allValues = '';
allValues=$( "#phone" ).val().slice(0,-1);
alert (counter);

var add = function() {
	if (counter === 0 ) {
		  	 counter =  1;
		  	 
		    $('#phones').append('<input type="text" id="'+x+'" />' ).append( '<input type="button" id="OK" value="ok" />' );
		    x=x+1;
		    $( "#OK" ).click(function() {
			var value = $("#1").val();
		    if (isNaN(value)){
		        alert('string ');
		    }else{
		    	
			    if (allValues != ''){
					allValues =  allValues + ',' + value
				}else{
				 	allValues =  allValues + value		
				}
				$("#phone").val(allValues);
				$("#1").val('');		
		    }

		   });
    }
};


var del = function(vendorid) {
     
	 var phons_num = $("#phone").val();
         $("#phone").val('');
	 var arr = phons_num.split(",");
	for (var i=0 ; i< arr.length-1 ; i++){
		 var div=document.createElement("div");
                 var elem = document.createElement("input");
                 elem.id =i;
                 elem.type = 'button';
                 elem.value = 'x'; 
		 div.id= i;
		 div.value=arr[i];
                 div.innerHTML = arr[i];
                 elem.onclick=function(){
                   var el = document.getElementById(this.id);
                   var dataString = el.value;


		    $.ajax({
			method: "POST",
			url: '/delPhon',
				dataType: "JSON",
				data: { "phone": dataString},
				complete: function(data)
				{	
					 el.parentNode.removeChild( el );
				}
			});


		     };

		    div.appendChild(elem);
                    document.getElementById('phonedel').appendChild(div);
	            }
};


 </script>
