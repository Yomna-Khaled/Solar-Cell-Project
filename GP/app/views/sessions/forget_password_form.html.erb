<div class="container">
	<div class="col-md-offset-3 col-md-6">       
		<div class="panel panel-info" style="margin-top: 150px">
			<div class="panel-heading" > 
				<h3 class="panel-title">
				Forget Password 
				</h3>
			</div>
			<div class="panel-body">  
				<%= form_tag forget_password_path do  %>
				<%= label_tag :email %>
				<%= text_field :email,  params[:email], class: 'form-control' ,placeholder: "Enter Email" %>
				<br>
				<%= submit_tag "Submit", class: "btn btn-primary" , methode: :post %>
				<% end %>
			</div>   
		</div>  
	</div>
</div>